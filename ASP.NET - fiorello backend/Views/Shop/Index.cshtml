@model IEnumerable<Product>
@{
    ViewData["Title"] = "Shop";
}


<style>
    td{
        width: 300px;
    }
</style>

<section id="products" data-count="@ViewBag.count">
    <div class="container">
    <h1 class="text-center mt-2">Shop page</h1>
        <div class="row" id="parent">
            <partial name="_ProductsPartial"/>
        </div>
        <div class="row my-4 justify-content-center">
            <button class="btn btn-primary show-more">Show More</button>
            <button class="btn btn-primary show-less d-none">Show Less</button>
        </div>
</div>

</section>

@section Scripts{
    <script src="~/js/Shop.js"></script>
    <script src="~/js/basket.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}







